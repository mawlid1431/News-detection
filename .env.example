# =============================================================================
# ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env and replace with your actual API keys
# NEVER commit the .env file to version control!

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# News API Keys (Get these from respective providers)
GNEWS_API_KEY=your-gnews-api-key-here
CURRENTS_API_KEY=your-currents-api-key-here
NEWSAPI_KEY=your-newsapi-key-here
MEDIASTACK_KEY=your-mediastack-key-here
THENEWSAPI_KEY=your-thenewsapi-key-here
GUARDIAN_API_KEY=your-guardian-api-key-here
WOLRDNEWS_API_KEY=your-worldnews-api-key-here

# AI and ML Service API Keys
HUGGINGFACE_API_KEY=your-huggingface-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
COHERE_API_KEY=your-cohere-api-key-here
OPENROUTER_API_KEY=your-openrouter-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here
DEEPSEEK_API_KEY=your-deepseek-api-key-here

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_DEFAULT_REGION=us-east-1

# AWS Temporary Credentials (if using temporary credentials)
# AWS_SESSION_TOKEN=your-session-token-here

# Database Configuration
DATABASE_URL=sqlite:///instance/trustify.db

# Application Settings
APP_NAME=TrustifyAI
APP_VERSION=1.0.0
DEBUG_MODE=True

